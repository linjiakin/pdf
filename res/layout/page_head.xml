<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="54dp"
    android:background="#222222">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu_logo"
        android:layout_gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:contentDescription="@string/menu_logo_description"
        android:onClick="toggleMenu"
        />
    <ImageView
        android:id="@+id/page_head_icon_id"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/o_default"
        android:contentDescription="@string/common_image_description"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:id="@+id/page_head_title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="5dp"/>
</LinearLayout>