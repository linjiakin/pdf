<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical" >

    <!-- 安防监测 -->


    <!-- 配电房选择面板 -->

    <include
        android:id="@+id/security_choice_pdf_panel_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="180dp"
        layout="@layout/choice_pdf_panel" />

    <!-- 具体明细面板 -->

    <LinearLayout
        android:id="@+id/security_container_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal" >
    </LinearLayout>

    <!-- 大类设备选项卡面板 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/security_map_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="平面图" />

        <Button
            android:id="@+id/security_listview_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="装置变更" />

        <Button
            android:id="@+id/security_temperature_chart_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="温度趋势图" />
    </LinearLayout>

</LinearLayout>