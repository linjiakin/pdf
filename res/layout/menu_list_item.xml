<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/menu_panel_id"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:onClick="menuClick">
        <ImageView
            android:id="@+id/menu_icon_id"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/common_image_description"
            android:src="@drawable/o_default"/>
        <TextView
            android:id="@+id/menu_title_id"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/menu_icon_id"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:textSize="22sp"
            android:text="@string/operate_home"/>
        <ImageView
            android:id="@+id/menu_jt_id"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/common_image_description"
            android:src="@drawable/right_arrow"/>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_line"
            android:layout_below="@id/menu_icon_id"
            android:layout_alignLeft="@id/menu_icon_id"
            android:contentDescription="@string/common_image_description"/>
    </RelativeLayout>

</LinearLayout>